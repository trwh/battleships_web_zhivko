<% if @player && @player.size > 0 %>
  Welcome to Battleships, <%= @player %>! <br>
  <a href = '/start_the_game'>Start the game</a>
<% else %>
  <%if @player && @player.size == 0%>
  You did not enter a name.
  <%end%>
  <form action="/start_the_game">
    What's your name?
    <input type="text" name="name">
    <input type="submit" value="submit">
  </form>

<% end %>
